<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginblur">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="810dp"
                android:layout_gravity="clip_vertical|fill"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="42dp"
                    android:src="@drawable/profile"
                    app:civ_border_color="#220A0A"
                    app:civ_border_width="2dp"
                    app:civ_circle_background_color="#AF1A1A" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/aldrich"
                    android:text="Upload Photo"
                    android:textColor="#00FFFF" />

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:hint="Enter Name"
                    android:inputType="textPersonName"
                    android:textColor="#00FFFF" />

                <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:hint="name@example.com"
                    android:inputType="textEmailAddress"
                    android:textColor="#00FFFF" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:hint="Enter Phone No."
                    android:inputType="phone"
                    android:textColor="#00FFFF" />

                <EditText
                    android:id="@+id/editTextNumberPassword"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:hint="Enter Password"
                    android:inputType="numberPassword"
                    android:textColor="#00FFFF" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="175dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="42dp"
                    android:backgroundTint="#988875"
                    android:text="Register" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="176dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="19dp"
                    android:text="---------------OR----------------"
                    android:textColor="#8B888C"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="318dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="29dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/googleLogoTextView"
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@drawable/googlelogotwo"
                        android:backgroundTint="#FF5252" />

                    <TextView
                        android:id="@+id/googletextView"
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="17dp"
                        android:layout_weight="1"
                        android:background="#FF5252"
                        android:fontFamily="monospace"
                        android:gravity="center|right|center_vertical"
                        android:paddingRight="15dp"
                        android:shadowRadius="0.9"
                        android:text="Google+"
                        android:textColor="#64FFDA"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0.6dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:background="@drawable/facebooktwo"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#030710"
                        android:backgroundTint="#1976d2 "
                        android:fontFamily="@font/khula_light"
                        android:gravity="center|right"
                        android:paddingTop="4dp"
                        android:paddingRight="15dp"
                        android:text="facebook"
                        android:textColor="#64FFDA"
                        android:textSize="20sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/alreadyRegTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginTop="32dp"
                    android:text="Already Registered? Login"
                    android:textColor="#72D103"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>